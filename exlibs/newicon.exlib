function newicon()
{
	local s=48

	[ "${1}" = "-s" ] && shift && local s=${1} && shift

	local DIR="${IMAGE}/usr/share/icons/hicolor/${s}"'x'"${s}/apps"

	mkdir -p "${DIR}"

	edo cp "${1}" "${DIR}/${2}"
}
function doicon()
{
	[ "${1}" = "-s" ] && shift && local s="-s ${1}" && shift

	CMDBASE="newicon ${s}"

	for i in "$@"
	do
		edo ${CMDBASE} "${i}" $( basename "${i}" )
	done
}