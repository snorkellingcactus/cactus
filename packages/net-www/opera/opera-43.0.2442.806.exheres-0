DESCRIPTION='A fast and secure web browser.'
HOMEPAGE="http://www.${PN}.com/"
LICENCES='OPERA-2014'
SLOT='0'
DOWNLOAD_URI_BASE="http://get.geo.opera.com/pub/${PN}/desktop/${PV}/linux/${PN}-stable_${PV}_"
